# Claude Skills sync configuration
#
# Copy this file to:
#   ~/.config/skills/config       (global config)
#   .claude/.skills.conf          (project config)
#
# Project config overrides global config.
# Command line flags override both.

# Actually perform the sync (default is dry-run)
# apply=true
apply=false

# Overwrite existing files without confirmation
# force=true
force=false

# Remove files that no longer exist in shared repository
# prune=true
prune=false

# Add synced files to .git/exclude (project mode only)
# exclude=true
exclude=false
